<div class="container">
    <div class="card">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= item.name %></h1>
                <p class="text-gray-600"><%= item.description %></p>
            </div>
            <div class="flex gap-2">
                <a href="/items/<%= item.id %>/edit" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form method="POST" action="/items/<%= item.id %>/delete" class="inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="card bg-gray-50">
                <h2 class="text-xl font-semibold mb-4">Item Details</h2>
                <div class="space-y-4">
                    <div>
                        <label class="text-gray-600">Category</label>
                        <p class="text-gray-900 font-medium">
                            <i class="fas fa-tag"></i>
                            <%= item.category_name || 'Uncategorized' %>
                        </p>
                    </div>
                    <div>
                        <label class="text-gray-600">Quantity in Stock</label>
                        <p class="text-gray-900 font-medium">
                            <i class="fas fa-box"></i>
                            <%= item.quantity %> units
                        </p>
                    </div>
                    <div>
                        <label class="text-gray-600">Price</label>
                        <p class="text-gray-900 font-medium">
                            <i class="fas fa-dollar-sign"></i>
                            $<%= parseFloat(item.price).toFixed(2) %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="card bg-gray-50">
                <h2 class="text-xl font-semibold mb-4">Stock Management</h2>
                <form method="POST" action="/items/<%= item.id %>/update-stock" class="space-y-4">
                    <div class="form-group mb-4">
                        <label for="quantity">Update Quantity</label>
                        <div class="flex gap-2">
                            <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" 
                                class="form-input" required>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="flex justify-between">
            <a href="/categories/<%= item.category_id %>" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Category
            </a>
            <a href="/items" class="btn btn-primary">
                <i class="fas fa-list"></i> All Items
            </a>
        </div>
    </div>
</div>
