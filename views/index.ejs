<div class="container">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Categories</h1>
        <a href="/categories/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(category => { %>
                <div class="card hover:shadow-lg transition-shadow">
                    <div class="flex justify-between items-center">
                        <div>
                            <h3 class="text-xl font-semibold mb-2">
                                <a href="/categories/<%= category.id %>" class="text-primary-600 hover:text-primary-700 flex items-center gap-2">
                                    <i class="fas fa-tag"></i>
                                    <%= category.name %>
                                </a>
                            </h3>
                            <% if (category.description) { %>
                                <p class="text-gray-600"><%= category.description %></p>
                            <% } %>
                            <div class="mt-3 text-sm text-gray-600">
                                <% if (category.itemCount) { %>
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-box"></i>
                                        <%= category.itemCount %> items
                                    </span>
                                <% } else { %>
                                    <span class="flex items-center gap-1">
                                        <i class="fas fa-box"></i>
                                        No items yet
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <a href="/categories/<%= category.id %>/edit" class="btn btn-secondary text-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="POST" action="/categories/<%= category.id %>/delete" class="inline">
                                <button type="submit" class="btn btn-danger text-sm" onclick="return confirm('Are you sure you want to delete this category?')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="card text-center py-8">
                <div class="text-gray-600 mb-4">
                    <i class="fas fa-tags text-4xl mb-3"></i>
                    <p>No categories found</p>
                </div>
                <a href="/categories/new" class="btn btn-primary inline-flex items-center gap-2">
                    <i class="fas fa-plus"></i>
                    Create your first category
                </a>
            </div>
        <% } %>
    </div>
</div>

